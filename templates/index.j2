{% include 'common/head.j2' %}
    <!-- Падключыць падзею па капіяванні ў буфер на кнопку #clipboard-copy -->
    <script>new ClipboardJS('#clipboard-copy');</script>
    <!-- Падключыць падзею па капіяванні ў буфер на кнопку #clipboard-copy -->
    <!-- Стварыць апрацоўшчык клавіятурных падзей -->
    <script>document.addEventListener('keydown', (event) => keyEvent(event), false);</script>
    <!-- Стварыць апрацоўшчык клавіятурных падзей -->
    <!-- Актывізаваць кнопку з даведкай -->
    <script>document.getElementById("help").hidden = false;</script>
    <!-- Актывізаваць кнопку з даведкай -->
    {% include 'index/help.j2' %}
    <div class="container">
        <!-- Закладкі для розных маніпуляцый з тэкстам -->
        {% include 'common/tabs.j2' %}
        <!-- Закладкі для розных маніпуляцый з тэкстам -->
        <!-- Пераключальнік накірунка канвертацыі -->
        <div class="row mt-4 mx-auto">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="lat-to-cyr" onClick="switchConvertationDirection()">
                <label class="form-check-label" for="lat-to-cyr" id="direction-label">Кірыліца ў лацінку</label>
            </div>
        </div>
        <!-- Пераключальнік накірунка канвертацыі -->
        <!-- Зыходны тэкст і кнопка яго ачысткі -->
        <div class="row row-cols-2 p-3">
            <div class="input-group">
                <div class="col-11">
                    <div class="form-floating">
                        <textarea id="input" title="Зыходны тэкст" class="form-control" style="height: 200px">{{ text_to_convert if text_to_convert else "" }}</textarea>
                        <label id="input-label" for="input">Устаўце сюды тэкст кірыліцаю</label>
                    </div>
                </div>
                <div class="col-1">
                    <button class="btn btn-danger btn-sm" type="button" title="Выдаліць тэкст" onClick="resetInput()"><i class="fa fa-trash"></i></button>  
                </div>
            </div>
        </div>
        <!-- Зыходны тэкст і кнопка яго ачысткі -->
        <!-- Выбар тыпу лацінкі для канвертацыі -->
        <div class="btn-group px-3" role="group">
            <input type="radio" class="btn-check btn-sm" name="type-radio" id="type-modern" autocomplete="off" {{ "checked" if type == "modern" or not type else "" }}>
            <label class="btn btn-outline-primary btn-sm" title="Сучасная лацінка" for="type-modern">Сучасная ("чэшская")</label>
            <input type="radio" class="btn-check btn-sm" name="type-radio" id="type-old" autocomplete="off" {{ "checked" if type == "old" else "" }}>
            <label class="btn btn-outline-primary btn-sm" title="Старая лацінка" for="type-old">Старая ("польская")</label>
        </div>
        <!-- Выбар тыпу лацінкі для канвертацыі -->
        <!-- Пазначэнне транзітыўнай мякасці -->
        <div class="btn-group px-3" role="group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="palatalization" {{ "checked" if palatalization else "" }}>
                <label class="form-check-label" for="palatalization">
                пазначаць мяккасць
                </label>
            </div>
        </div>
        <!-- Пазначэнне транзітыўнай мякасці -->
        <!-- Кнопка канвертацыі -->
        <div class="row row-cols-2 p-3">
            <div class="col-11">
                <input type="button" class="btn  btn-primary btn-lg w-100" value="Канвертаваць" title="Канвертаваць" onclick="getConverted()"/>
            </div>
        </div>
        <!-- Кнопка канвертацыі -->
        <!-- Выніковы тэкст -->
        <div class="row row-cols-2 p-3">
            <div class="input-group">
                <div class="col-11">
                    <div class="form-floating">
                        <textarea id="output" placeholder="Тут з'явіцца вынік лацінкаю" readonly title="Сканвертаваны тэкст" class="form-control" style="height: 200px">{{ converted_text if converted_text else "" }}</textarea>
                        <label for="output" id="output-label">Тут з'явіцца вынік лацінкаю</label>
                    </div>
                </div>
                <div class="col-1" >
                    <button class="btn btn-primary btn-sm" id="clipboard-copy" type="button" title="Зкапіяваць тэкст" data-clipboard-target="#output"><i class="fa fa-copy"></i></button>  
                </div>
            </div>
        </div>
        <!-- Выніковы тэкст -->
    </div>
    <!-- Аднавіць папярэдні стан настроек -->
        <script>restoreControlsState();</script>
    <!-- Аднавіць папярэдні стан настроек -->
{% include 'common/tail.j2' %}
